{% extends 'navigation.html.twig' %}

{% block content %}

    <div id="page-wrapper" style="margin: 0px; border: none;">
    <h1 class="page-header">Products</h1>
    <i class="fa fa-plus-square fa-4x" style="margin-bottom: 10px; color: #337ab7"></i>
    {% block navigation %}{% endblock %}
    {% for p in products %}
        {% if p.count >= 10 %}
        <div class="row">
                <div class="col-lg-4">
                        <div class="panel panel-success">
                                <div class="panel-heading">
                                        <div class="row">
                                                <div class="col-xs-3">
                                                        <div>{{ p.name }}</div>
                                                </div>
                                        </div>
                                </div>
                                <div class="panel-body">
                                        <div>{{ p.count }} {{ p.unit }}</div>
                                </div>
                        </div>
                </div>
        </div>
        {% elseif p.count > 1 %}
            <div class="row">
                <div class="col-lg-4">
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <div>{{ p.name }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div>{{ p.count }} {{ p.unit }}</div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-lg-4">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <div>{{ p.name }}</div>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div>{{ p.count }} {{ p.unit }}</div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
</div>
{% endblock %}
