{% extends 'navigation.html.twig' %}

{% block content %}
    {% if app.user and is_granted('ROLE_ADMIN') %}
    <div id="page-wrapper" style="margin: 0px; border: none;">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Overview</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12"><h3>Cash</h3></div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <div>Cash Position</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="huge">{{  data.cash[0].position }} &euro;</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12"><h3>Coffee List</h3></div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="table-responsive">
                    <table id="coffeelist-table" class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Expenses</th>
                            <th>Paid</th>
                            <th>Credit</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% elseif is_granted('ROLE_USER') %}
        <div class="row">
            <img class="category-image" id="coffee" src="{{ asset('build/images/002-coffee-cup.png') }}" height="200" alt="Coffee" style="margin: 20px;">
            <img class="category-image" id="drink" src="{{ asset('build/images/001-coke.png') }}" height="200" alt="Drinks" style="margin: 20px;">
            <img class="category-image" id="snack" src="{{ asset('build/images/003-chocolate-bar.png') }}" height="200" alt="Snacks" style="margin: 20px;">
        </div>
        <div class="tab-content" id="products">
            <div class="tab-pane active" id="coffee" role="tabpanel" aria-labelledby="coffee">
                {% for c in consumer %}
                    <div class="col-lg-3" style="margin-top: 20px;" id="consumerCard-{{ c.id }}">
                        <div class="consumer-card" style="width: 100%; height: 8em;">
                            <div class="row">
                                <div class="col-lg-4">
                                    <img src="https://api.adorable.io/avatars/200/{{ c.lastName }}{{ c.firstName }}.png" alt="bla" class="img-thumbnail">
                                </div>
                                <div class="col-lg-8">
                                    <a class="consumerDetails-link" href="/consumers/{{ c.id }}" style="color: rgb(51, 51, 51);">
                                        <div style="font-size: 18px;">
                                            {{ c.firstName }} {{ c.lastName }}
                                        </div>
                                        {%  if (c.paid - c.expenses) >= 0 %}
                                            <div style="font-size: 18px; color: #3f903f">
                                                {{ c.paid - c.expenses }} &euro;
                                            </div>
                                        {% else %}
                                            <div style="font-size: 18px; color: #c7254e">
                                                {{ c.paid - c.expenses }} &euro;
                                            </div>
                                        {% endif %}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="tab-pane" id="drinks" role="tabpanel" aria-labelledby="drinks">drinks</div>
            <div class="tab-pane" id="snacks" role="tabpanel" aria-labelledby="snacks">snacks</div>
        </div>
    {% else %}
        <div>Please log in</div>
    {% endif %}
{% endblock %}
