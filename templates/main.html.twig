{% extends 'navigation.html.twig' %}

{% block content %}
    <div id="page-wrapper" style="margin: 0px; border: none;">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Overview</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12"><h3>Cash</h3></div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <div>Cash Position</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="huge">{{  data.cash[0].position }}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12"><h3>Products</h3></div>
        </div>
        <div class="row">
            {% for p in data.products %}
            <div class="col-lg-3 col-md-6">
                {% if p.count <= 1 %}
                <div class="panel panel-danger">
                {% elseif p.count <= 5 %}
                <div class="panel panel-warning">
                    {% else %}
                <div class="panel panel-primary">
                {% endif %}
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <div>{{  p.name }}</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="huge">{{ p.count }} {{  p.unit }}</div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
                <div class="row">
                    <div class="col-lg-12"><h3>Coffee List</h3></div>
                </div>
        <div class="row">
            <div class="col-lg-10">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-list fa-fw"></i> Coffee List
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="table-responsive">
                                    <table id="coffeelist-table" class="table table-bordered table-hover table-striped">
                                        <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Expenses</th>
                                            <th>Paid</th>
                                            <th>Credit</th>
                                        </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div id="morris-bar-chart"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
