{% extends 'navigation.html.twig' %}

{% block content %}

    {% block navigation %}{% endblock %}
    <div id="page-wrapper" style="margin: 0px; border: none;">
        <div id="resultMessage"></div>
        <h1>{{ consumer[0].name }}</h1>
        {% if consumer[0].credit >= 0 %}
            <h1 style="color: #3f903f">{{ consumer[0].credit }} &euro;</h1>
        {% else %}
            <h1 style="color: #c7254e">{{ consumer[0].credit }} &euro;</h1>
        {% endif %}
    </div>
{% endblock %}
